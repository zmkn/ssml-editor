{
  "name": "@ssml-editor/core",
  "version": "1.0.0",
  "description": "all core are settled here",
  "homepage": "https://github.com/zmkn/ssml-editor/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zmkn/ssml-editor.git"
  },
  "bugs": {
    "url": "https://github.com/zmkn/ssml-editor/issues"
  },
  "license": "MIT",
  "author": "hz <beijingren@vip.qq.com>",
  "type": "module",
  "exports": {
    ".": {
      "style": "./dist/styles/style.css",
      "import": "./dist/index.es.js",
      "types": "./dist/types/index.d.ts",
      "require": "./dist/index.cjs.js"
    },
    "./styles/*": "./dist/styles/*"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "unpkg": "./dist/index.umd.js",
  "jsdelivr": "dist/index.umd.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run build",
    "build": "run-s rm:dist type-check build-only",
    "build-only": "vite build --mode production",
    "type-check": "vue-tsc --noEmit --composite false",
    "rm:dist": "rimraf dist"
  },
  "dependencies": {
    "@ssml-editor/base": "*",
    "@ssml-editor/modules": "*",
    "@ssml-editor/utils": "*"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.15",
    "@types/node": "^22.18.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.4"
  }
}
